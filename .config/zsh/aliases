# General Alias
alias rm='rm -vI'
alias mv='mv -iv'
alias cp='cp -iv'
alias mkdir='mkdir -pv'
alias vim='nvim'
alias v='fd --type f --hidden --exclude .git --print0 | fzf-tmux -p --reverse --read0 | xargs -0 -I {} nvim {}'
alias sd='cd "$(fd --type d --hidden --exclude .git . ~ | fzf)"'
alias ff='fastfetch'
alias cc='clear'
alias df='df -h'
alias cat='bat'
alias free='free -m' # show sizes in MB
alias ansibleupdate='just setup-all -K --ask-become-pass --ask-vault-pass'
alias fpu='flatpak update'
alias listinstalled="expac -H M '%-20n\t%10d' \$(pacman -Qeq)"

# Eza Alias
alias ll='eza --all --long --color=auto --icons --group-directories-first'
alias la='eza --grid --all --color auto --icons --sort=type'
alias lt='eza --tree --level=2 --icons'
alias ls='eza --grid --color auto --icons --sort=type'

# More Random Alias
alias conf='cd ~/.config'

# Change directory aliases
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Alias's for archives
alias mktar='tar -cvf'
alias mkbz2='tar -cvjf'
alias mkgz='tar -cvzf'
alias untar='tar -xvf'
alias unbz2='tar -xvjf'
alias ungz='tar -xvzf'

# Yazi Alias
alias y='yazi'

# Tmux Alias
alias tm='tmux'
alias tma='tmux attach-session'
alias tmks='tmux kill-session -a'
alias tml='tmux list-sessions'
alias tmn='tmux new-session'
alias tms='tmux new-session -s'

# Colorize grep output (good for log files)
alias grep='grep --color=auto'
alias egrep='grep -E --color=auto'
alias fgrep='grep -F --color=auto'

alias theme="~/.config/themes/switch-theme.sh"

# Claude Code
alias claude-sessions='~/.local/bin/claude-sessions'
